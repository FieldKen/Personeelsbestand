@model EmployeeCreateViewModel

<form asp-controller="Employee" asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" class="form-control"/>
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control"/>
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Employment"></label>
		<input asp-for="Employment" class="form-control"/>
		<span asp-validation-for="Employment" class="text-danger"></span>
	</div>

	
	<div class="form-group">
		<label asp-for="Age"></label>
		<input asp-for="Age" class="form-control"/>
		<span asp-validation-for="Age" class="text-danger"></span>
	</div>

	<button class="btn-primary btn" type="submit">Create employee</button>
</form>